@model ControleEstoque.Web.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
}
@Styles.Render("~/Content/Login.css")

<div class="login">
    <div class="login-screen">
        <div class="app-title">
            <h3 class="titulo">Login</h3>
        </div>
        <div class="login-form">
            <section id="LoginForm">
                @using (Html.BeginForm("Login", "Conta", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="control-group">
                        @*@Html.LabelFor(m => m.Usuario, new { @class = "control-label col-md-2" })*@
                        @*<div class="col-md-10">*@
                        @Html.TextBoxFor(m => m.Usuario, new { @class = "login-field-icon fui-lock", @placeholder = "Usuário" })
                        @Html.ValidationMessageFor(m => m.Usuario, "", new { @class = "text-danger" })
                        @*</div>*@
                    </div>
                    <div class="control-group">
                        @*@Html.LabelFor(m => m.Senha, new { @class = "control-label col-md-2" })*@
                        @*<div class="col-md-10">*@
                        @Html.PasswordFor(m => m.Senha, new { @class = "login-field-icon fui-lock", @placeholder = "Usuário" })
                        @Html.ValidationMessageFor(m => m.Senha, "", new { @class = "text-danger" })
                        @*</div>*@
                    </div>
                    <div class="form-horizontal">
                        <div class="control-group text-left" style="align-content:center">
                            @Html.LabelFor(m => m.LembrarMe)
                            <div class="col-md-2">
                                @Html.CheckBoxFor(m => m.LembrarMe)
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="">
                            <input type="submit" class="btn btn-primary btn-large btn-block" value="Entrar" />
                            <div class="divider row"></div>
                            <a class="login-link" href="#">Esqueceu sua senha?</a>
                        </div>
                    </div>
                }
            </section>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}